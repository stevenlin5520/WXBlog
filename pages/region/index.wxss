.picker{
	width: 100%;
	height: 80rpx;
	background-color: pink;
	margin-top: 100rpx;
	display: flex;
	align-items: center;
	justify-content: space-around;
	flex-direction: row;
}
.picker .left{
	width: 20%;
	height: 100%;
	color: red;
	margin: 0;
	padding: 0;
}
.picker .right{
	width: 80%;
	height: 100%;
	margin-left: 30rpx;
	margin: 0;
	padding: 0;
	display: flex;
	
}
.picker .right .cityitem{
	width: 100%;
	height: 80%;
	margin: 0;
	padding: 0;
	color: green;
}

.body{
	width: auto;
	height: 100%;
	padding: 0 20rpx 0 20rpx;
}
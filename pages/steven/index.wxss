}
.scrollx2-item{
	display: inline-block;
	width: 100%;
	height: 100%;
	/*background: green;*/
}
/*下面主题部分的每一项*/
.cont-item{
	display: flex;
	flex-direction: row;
	align-items: flex-start;
	width:100%;
	height:200rpx;
	margin-bottom:40rpx;
	/*background: grey;*/
}
.cont-item .img{
	width: 30%;
	height: 100%;
	padding-left: 20rpx;
	/*background: pink;*/
}
.cont-item .right{
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	width: 70%;
	height: 100%;
	margin-left: 20rpx;
	/*background: green;*/
}
.cont-item .right .title{
	font-family: monospace;
	font-weight: bold;
	font-size: 45rpx;
	padding-top: 15rpx;
}
.cont-item .right .date{
	font-family: monospace;
	font-size: 30rpx;
	padding-top: 20rpx;
}
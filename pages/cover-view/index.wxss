page{
  width: 100%;
  height: 100%;
  background: grey;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

map{
  margin-top: 25rpx;
}

.cover-view{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  top: 150rpx;
  left: 50rpx;
  width: 600rpx;
  height: 400rpx;
  background-color: #FFF;
  /* 设置透明度，从0-1（完全 透明到完全不透明） */
  opacity: 0.9;
}

.cover-view .top{
  position: static;
  width: 85%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 40rpx;
  color: red;
}
.cover-view .top .icon{
  width: 70rpx;
  height: 70rpx;
  background-size: cover;
}
.cover-view .content{
  position: static;
  width: 100%;
  height: 200rpx;
  background: pink;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.cover-view .bottom{
  position: static;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}
.cover-view .bottom .btn{
  width: 150rpx;
  height: 70rpx;
  line-height: 70rpx;
  color: #FFF;
  background: fuchsia;
  border-radius: 80rpx;
}

.switch{
  margin-top:50rpx;
  width: 600rpx;
  height: 100rpx;
  color: #FFF;
  background: green;
  border: 0;
  font-size: 38rpx;
  border-radius: 100rpx;
}